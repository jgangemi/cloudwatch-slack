rules:
  no-console:
    - 0

  # Stylistic Issues

  eol-last:
    - 2
  indent:
    - 2
    - 4
    - SwitchCase: 1
  linebreak-style:
    - 2
    - unix
  no-trailing-spaces:
    - 2
  quotes:
    - 2
    - single
  semi:
    - 2
    - always
  space-before-function-paren:
    - 2
    - anonymous: always
      named: never
  space-return-throw-case:
    - 2

  # Strict Mode

  strict:
    - 2
    - global

  # Possible Errors

  no-unexpected-multiline:
    - 2

  # Node.js and CommonJS

  global-require:
    - 2
  handle-callback-err:
    - 2
  no-mixed-requires:
    - 2
  no-new-require:
    - 2
  no-path-concat:
    - 2
  no-process-exit:
    - 2

  # Best Practices

  block-scoped-var:
    - 2
  consistent-return:
    - 2
  curly:
    - 2
  dot-notation:
    - 2
  dot-location:
    - 2
    - property
  eqeqeq:
    - 2
  guard-for-in:
    - 2
  no-eq-null:
    - 2
env:
  node: true
  mocha: true
extends: 'eslint:recommended'
